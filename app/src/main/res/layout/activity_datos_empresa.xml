<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.rpallas.usjandroidejer1.DatosEmpresaActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Datos de la empresa"
        android:id="@+id/depositoPesoText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datosCIFEditText"
        android:hint="CIF"
        android:layout_below="@+id/depositoPesoText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datosNombreEditText"
        android:hint="Nombre de la empresa"
        android:layout_below="@+id/datosCIFEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:hint="Número de teléfono"
        android:layout_alignBottom="@+id/datosLlamarButton"
        android:id="@+id/datosTelEditText"
        android:layout_below="@+id/datosNombreEditText"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:id="@+id/datosLlamarButton"
        android:layout_toEndOf="@+id/datosTelEditText"
        android:layout_below="@+id/datosNombreEditText"
        android:layout_toRightOf="@+id/datosTelEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="email@empresa.com"
        android:id="@+id/datosEmailEditText"
        android:layout_above="@+id/datosWebButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/datosEmailButton"
        android:layout_toEndOf="@+id/datosTelEditText"
        android:layout_below="@+id/datosLlamarButton"
        android:layout_alignLeft="@+id/datosLlamarButton"
        android:layout_alignStart="@+id/datosLlamarButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:ems="10"
        android:hint="http://empresa.com"
        android:id="@+id/datosWebEditText"
        android:layout_alignBottom="@+id/datosWebButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir"
        android:id="@+id/datosWebButton"
        android:layout_toEndOf="@+id/datosTelEditText"
        android:layout_below="@+id/datosEmailButton"
        android:layout_alignStart="@+id/datosEmailButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/depositoMaterialImage"
        android:layout_below="@+id/datosWebButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />
</RelativeLayout>
